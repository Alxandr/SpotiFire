<Window x:Class="SpotiFire.WpfTest.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Margin="10,10,10,0">Username:</TextBlock>
            <TextBox x:Name="Username" Margin="10,2,10,10"></TextBox>
            <TextBlock Margin="10,10,10,0">Password:</TextBlock>
            <PasswordBox x:Name="Password" Margin="10,2,10,10"></PasswordBox>
            <Button Margin="10" Click="Button_Click">Login</Button>
        </StackPanel>
    </Grid>
</Window>
